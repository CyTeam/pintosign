%html{:lang => 'en', 'xmlns:og' => 'http://ogp.me/ns#', 'xmlns:fb' => 'http://www.facebook.com/2008/fbml'}
  %head
    %meta{:charset => "UTF-8"}

    <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame -->
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}

    = yield(:head)
    = stylesheet_link_tag 'screen', 'pintosign', :media => 'screen, projection, print'
    %link{:rel => "stylesheet", :type => "text/css", :href => "/fancybox/jquery.fancybox-1.3.4.css", :media => "screen"}
    = javascript_include_tag 'application', 'cufon-yui', 'Ashby_700.font', 'cufon', 'easySlider1.7', 'slider'
    %script{:type => "text/javascript", :src => "/fancybox/jquery.fancybox-1.3.4.pack.js"}
    = javascript_include_tag 'fancybox'

  %body#pinto_sign
    <!-- Main Content -->
    #container
      - if @page
        #navigation
          = render_navigation(context: :main)
          #cirle.orange

      #content
        = yield

