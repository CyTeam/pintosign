!!!
%html{:lang => 'en', 'xmlns:og' => 'http://ogp.me/ns#', 'xmlns:fb' => 'http://www.facebook.com/2008/fbml'}
  %head
    %meta{:charset => "UTF-8"}

    <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame -->
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}

    = yield(:head)
    = stylesheet_link_tag 'screen', 'pintosign', :media => 'screen, projection, print'
    %link{:rel => "stylesheet", :type => "text/css", :href => "/fancybox/jquery.fancybox-1.3.4.css", :media => "screen"}
    = javascript_include_tag 'application', 'cufon-yui', 'Ashby_700.font', 'cufon', 'easySlider1.7', 'slider'
    %script{:type => "text/javascript", :src => "/fancybox/jquery.fancybox-1.3.4.pack.js"}
    = javascript_include_tag 'fancybox'

  %body#pinto_sign
    <!-- Main Content -->
    #container
      - if @page
        #navigation
          - navigation_for(homepage.id) { |pages| @pages = pages }
          %ul
            - @pages.each do |page|
              %li
                = link_to page.title, page.link, :class => "#{(current_page == page or current_page.parent_pages.include?page) ? 'active' : ''}", :id => page.slug
                - if (page == current_page or current_page.parent_pages.include?page) && !page.childs.empty?
                  %ul{:id => "#{page.slug}_children"}
                    - page.childs.each do |child|
                      %li= link_to child.title, child.link, :class => "#{child == current_page ? 'active' : ''}"
          #cirle.orange

      #content
        = yield

